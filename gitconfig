[user]
	name = Dan Harper
	email = intouch@danharper.me
[core]
	excludesfile = /Users/danharper/.bin/gitignore_global
	quotepath = false
	autocrlf = input
[mergetool]
	keepBackup = true
[color]
	ui = true
[alias]
	root = !pwd -P

	# Fancy logging.
	#   h = head
	#   hp = head with patch
	#   r = recent commits, only current branch
	#   ra = recent commits, all reachable refs
	#   l = all commits, only current branch
	#   la = all commits, all reachable refs
	head = !git l -1
	h = !git head
	hp = "!. ~/.bin/dotfiles/githelpers && show_git_head"
	r = !git l -30
	ra = !git r --all
	l = "!. ~/.bin/dotfiles/githelpers && pretty_git_log"
	la = !git l --all
